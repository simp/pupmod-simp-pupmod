<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d %-5p [%c{2}] %m%n</pattern>
        </encoder>
    </appender>

    <appender name="SYSLOG" class="ch.qos.logback.classic.net.SyslogAppender">
      <syslogHost>localhost</syslogHost>
      <facility><%= @syslog_facility %></facility>
      <suffixPattern><%= @syslog_message_format %></suffixPattern>
      <throwableExcluded>true</throwableExcluded>
    </appender>

    <appender name="F1" class="ch.qos.logback.core.FileAppender">
        <file>/var/log/puppetserver/puppetserver.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d %-5p [%c{2}] %m%n</pattern>
        </encoder>
    </appender>

    <logger name="org.eclipse.jetty" level="<%= @log_level %>"/>

    <root level="<%= @log_level %>">
<% if @log_to_syslog -%>
        <appender-ref ref="SYSLOG"/>
<% end -%>
<% if @log_to_file -%>
        <appender-ref ref="F1"/>
<% end -%>
    </root>
</configuration>
