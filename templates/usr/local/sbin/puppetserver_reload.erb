# A simple script for reloading the Puppet Server JRuby instances

PATH=/opt/puppetlabs/bin:$PATH

cert=`puppet config print hostcert`
key=`puppet config print hostprivkey`
cacert=`puppet config print localcacert`

resp=`curl -o /dev/null -L -w "%{http_code}" -s -i --cert ${cert} --key ${key} --cacert ${cacert} -X DELETE https://<%= @facts['fqdn'] %>:<%= @masterport %><%= @admin_api_mountpoint %>/v1/jruby-pool`

test "$resp" -eq '204'
